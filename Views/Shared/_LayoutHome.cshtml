<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid position-relative d-flex p-0">
        @if (ViewBag.UserName != null)
        {
            <!-- Sidebar Start -->
            <div class="sidebar pe-4 pb-3">
                <nav class="navbar bg-light navbar-light">
                    <a href="/" class="navbar-brand mx-4 mb-3">
                        <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>NetManagement</h3>
                    </a>
                    <div class="d-flex align-items-center ms-4 mb-4">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(ViewBag.Image))
                            {
                                <img class="rounded-circle" src="@Url.Content(ViewBag.Image)" alt="User Image" style="width: 40px; height: 40px;">
                            }
                            else
                            {
                                <i class="fas fa-user-circle" style="font-size: 40px;"></i>
                            }
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0">@ViewBag.UserName</h6>
                            <span>@(User.IsInRole("Admin") ? "Quản trị viên" : "Người dùng")</span>
                        </div>
                    </div>
                    <div class="navbar-nav w-100">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link">
                            <i class="fas fa-home me-2"></i>Trang chủ
                        </a>
                        <a asp-controller="Computers" asp-action="Index" class="nav-item nav-link">
                            <i class="fas fa-desktop me-2"></i>Quản lý máy tính
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Users" asp-action="Index" class="nav-item nav-link">
                                <i class="fas fa-users me-2"></i>Quản lý tài khoản
                            </a>
                            <a asp-controller="Orders" asp-action="Index" class="nav-item nav-link">
                                <i class="fas fa-shopping-cart me-2"></i>Quản lý đơn hàng
                            </a>
                            <a asp-controller="Statistics" asp-action="Index" class="nav-item nav-link">
                                <i class="fas fa-chart-bar me-2"></i>Thống kê
                            </a>
                        }
                        <a asp-controller="Account" asp-action="Profile" class="nav-item nav-link">
                            <i class="fas fa-user me-2"></i>Thông tin cá nhân
                        </a>
                        <a asp-controller="Account" asp-action="Logout" class="nav-item nav-link">
                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                        </a>
                    </div>
                </nav>
            </div>
            <!-- Sidebar End -->
        }

        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <form asp-controller="@ViewBag.ControllerName" asp-action="Search" method="get" class="d-none d-md-flex ms-4">
                    <input class="form-control border-0" type="search" name="searchString" placeholder="Tìm kiếm">
                </form>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            @if (!string.IsNullOrEmpty(ViewBag.Image))
                            {
                                <img class="rounded-circle me-lg-2" src="@Url.Content(ViewBag.Image)" alt="User Image" style="width: 40px; height: 40px;">
                            }
                            else
                            {
                                <i class="fas fa-user-circle me-lg-2" style="font-size: 40px;"></i>
                            }
                            <span class="d-none d-lg-inline-flex">@(ViewBag.UserName ?? "Khách")</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <div class="dropdown-header bg-light py-2">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(ViewBag.Image))
                                    {
                                        <img class="rounded-circle me-2" src="@Url.Content(ViewBag.Image)" alt="User Image" style="width: 32px; height: 32px;">
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle me-2" style="font-size: 32px;"></i>
                                    }
                                    <div>
                                        <h6 class="mb-0">@(ViewBag.UserName ?? "Khách")</h6>
                                        <small class="text-muted">@(User.IsInRole("Admin") ? "Quản trị viên" : ViewBag.UserName != null ? "Người dùng" : "Khách")</small>
                                    </div>
                                </div>
                            </div>
                            <div class="dropdown-divider"></div>
                            @if (ViewBag.UserName != null)
                            {
                                <a asp-controller="Account" asp-action="Profile" class="dropdown-item">
                                    <i class="fas fa-user me-2"></i>Thông tin cá nhân
                                </a>
                                <a asp-controller="Account" asp-action="Logout" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="dropdown-item">
                                    <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                                </a>
                                <a asp-controller="Account" asp-action="Register" class="dropdown-item">
                                    <i class="fas fa-user-plus me-2"></i>Đăng ký
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->
            <div style="min-height:600px;">@RenderBody()</div>
            
            @await Html.PartialAsync("_Footer")
        </div>
        <!-- Content End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart/chart.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
