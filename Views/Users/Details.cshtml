@model NetManagement.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-wrapper col-md-6">
        <div class="page-header-modern mb-4">
            <h1 class="page-title">Chi tiết người dùng</h1>
        </div>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th class="col-sm-3">Tên đăng nhập</th>
                    <td class="col-sm-9">@Html.DisplayFor(model => model.UserName)</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th>Mật khẩu</th>
                    <td>@Html.DisplayFor(model => model.Password)</td>
                </tr>
                <tr>
                    <th>Vai trò</th>
                    <td>@(Model.IsAdmin ? "Quản trị viên" : "Người dùng")</td>
                </tr>
                <tr>
                    <th>Số dư</th>
                    <td>@Model.Balance.ToString("N0") VNĐ</td>
                </tr>
                <tr>
                    <th>Ngày tạo</th>
                    <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Details.css" asp-append-version="true" />
}

