@model NetManagement.Models.User

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-wrapper col-md-6">
        <div class="page-header-modern mb-4">
            <h1 class="page-title">Thêm người dùng</h1>
        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="Nhập tên người dùng" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IsAdmin" class="form-label">Chọn vai trò</label>
                <select asp-for="IsAdmin" class="form-select">
                    <option value="false">Người dùng</option>
                    <option value="true">Quản trị viên</option>
                </select>
                <span asp-validation-for="IsAdmin" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Balance" class="form-label">Số dư</label>
                <input asp-for="Balance" class="form-control" value="0" readonly />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CreatedAt" value="@DateTime.Now" />

            <div class="form-group d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Tạo mới
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />
}
