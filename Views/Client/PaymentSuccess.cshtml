@model NetManagement.Models.Order

@{
    ViewData["Title"] = "Thanh toán thành công";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card bg-white shadow-sm">
                            <div class="card-body text-center p-5">
                                <div class="mb-4">
                                    <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                                </div>
                                <h3 class="text-success mb-3">Thanh toán thành công!</h3>
                                <p class="text-muted mb-4">Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi</p>
                                <div class="row justify-content-center mb-4">
                                    <div class="col-md-8">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <h5 class="text-primary mb-3">Chi tiết giao dịch</h5>
                                                <div class="row mb-2">
                                                    <div class="col-6 text-start text-muted">Máy tính:</div>
                                                    <div class="col-6 text-end">@Model.Computer.Name</div>
                                                </div>
                                                <div class="row mb-2">
                                                    <div class="col-6 text-start text-muted">Thời gian sử dụng:</div>
                                                    <div class="col-6 text-end">@((Model.EndTime - Model.StartTime)?.ToString(@"hh\:mm\:ss"))</div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-6 text-start text-muted">Tổng thanh toán:</div>
                                                    <div class="col-6 text-end text-primary fw-bold">@Model.TotalCost.ToString("N0") VNĐ</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <a asp-action="Index" class="btn btn-primary btn-lg px-5">
                                        <i class="fas fa-desktop me-2"></i>
                                        Quay lại danh sách máy
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 