@model NetManagement.Models.Computer

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-wrapper col-md-6">
        <div class="page-header-modern mb-4">
            <h1 class="page-title">Chỉnh sửa thông tin</h1>
        </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Tên máy</label>
                <input class="form-control" value="@Model.Name" readonly />
                <input asp-for="Name" type="hidden" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label">Tình trạng</label>
                <select asp-for="Status" class="form-select">
                    <option value="">-- Chọn trạng thái --</option>
                    <option value="Available">Sẵn sàng</option>
                    <option value="InUse">Đang sử dụng</option>
                    <option value="Maintenance">Bảo trì</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PricePerHour" class="form-label">Giá theo giờ</label>
                <input asp-for="PricePerHour" class="form-control" placeholder="Nhập giá theo giờ" />
                <span asp-validation-for="PricePerHour" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="BookingCount" class="form-label">Số lần máy được đặt</label>
                <input asp-for="BookingCount" class="form-control" value="0" readonly />
                <span asp-validation-for="BookingCount" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/Edit.css" asp-append-version="true" />
}